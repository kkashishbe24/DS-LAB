#include <iostream>
using namespace std;

int binarysearch(int arr[],int n,int wanted)
{
    int left=0;
    int right=n-1;
    
    while(left<=right)
    {  
        int mid= left+(right-left)/2;
        
         if(arr[mid]==wanted)
         {
             return mid;
         }
         else if(arr[mid]>wanted)
         {
          right=mid-1;   
         }
         else
         {
             left=mid+1;
         }
        
    }
    return -1;
}

int main() 
{ 
    int n,wanted;
    int arr[n];
    
cout<<"enter no. of elements in array: "<<endl;
cin>>n;


cout<<"array is "<<endl;
for(int i=0;i<n;i++)
{
    cin>>arr[i];
}

cout<<"enter wanted element"<<endl;
cin>>wanted;

int index = binarysearch(arr,n,wanted);

 if (index != -1) {
        cout << "Element found at index: " << index << endl;
    } else {
        cout << "Element not found" << endl;
    }


return 0; 
} 
