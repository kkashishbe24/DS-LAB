#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};
Node* newNode(int data) {
    Node *temp = new Node;
    temp->data = data;
    temp->next = nullptr;
    return temp;
}
int deleteKeyOccurrencesinlist(Node*& head, int key) {
    int count = 0;
    while (head != nullptr && head->data == key) {
        Node* temp = head;
        head = head->next;
        delete temp;
        count++;
    }
    Node* curr = head;
    Node* prev = nullptr;

    while (curr != nullptr) {
        if (curr->data == key) {
            Node* temp = curr;
            prev->next = curr->next; 
            curr = curr->next;
            delete temp;
            count++;
        } else {
            prev = curr;
            curr = curr->next;
        }
    }

    return count;
}
void printList(Node* head) {
    Node* temp = head;
    while (temp != nullptr) {
        cout << temp->data;
        if (temp->next != nullptr) cout << "->";
        temp = temp->next;
    }
    cout << endl;
}
int main() {
    Node* head = newNode(1);
    head->next = newNode(2);
    head->next->next = newNode(1);
    head->next->next->next = newNode(2);
    head->next->next->next->next = newNode(1);
    head->next->next->next->next->next = newNode(3);
    head->next->next->next->next->next->next = newNode(1);

    int key = 1;

    cout << "Original Linked List: ";
    printList(head);

    int count = deleteKeyOccurrencesinlist(head, key);

    cout << "Count: " << count << endl;
    cout << "Updated Linked List: ";
    printList(head);

    return 0;
}
