#include <stdio.h>

int main() {
    int A[10][10];
    int rows, cols, i, j;
    int rowSum, colSum;

    // Input matrix size
    printf("Enter number of rows and columns: ");
    scanf("%d %d", &rows, &cols);

    // Input matrix elements
    printf("Enter elements of the matrix:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            printf("Enter A[%d][%d]: ", i, j);
            scanf("%d", &A[i][j]);
        }
    }

    // Display matrix
    printf("\nMatrix:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            printf("%d ", A[i][j]);
        }
        printf("\n");
    }

    // Row-wise sum
    printf("\nSum of each row:\n");
    for (i = 0; i < rows; i++) {
        rowSum = 0;
        for (j = 0; j < cols; j++) {
            rowSum += A[i][j];
        }
        printf("Row %d: %d\n", i + 1, rowSum);
    }

    // Column-wise sum
    printf("\nSum of each column:\n");
    for (j = 0; j < cols; j++) {
        colSum = 0;
        for (i = 0; i < rows; i++) {
            colSum += A[i][j];
        }
        printf("Column %d: %d\n", j + 1, colSum);
    }

    return 0;
}

